{
  "name": "site",
  "version": "1.0.0",
  "scripts": {
    "build": "wireit",
    "site": "wireit",
    "start": "wireit"
  },
  "wireit": {
    "build": {
      "command": "rollup -c",
      "dependencies": [
        "site"
      ],
      "files": [
        "../../node_modules/design-system/dist/",
        "rollup.config.mjs",
        "_site/",
        "entrypoints/"
      ],
      "output": [
        "dist"
      ]
    },
    "site": {
      "command": "npx @11ty/eleventy",
      "files": [
        "src/**/*.*",
        ".eleventy.js"
      ],
      "output": [
        "_site/"
      ]
    },
    "start": {
      "command": "http-server dist",
      "dependencies": [
        "build"
      ]
    }
  },
  "dependencies": {
    "@lit-labs/eleventy-plugin-lit": "^1.0.1",
    "@web/rollup-plugin-html": "^1.11.1",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "design-system": "^1.0.0",
    "lit": "^2.7.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "http-server": "^14.1.1",
    "rollup": "^3.20.2",
    "wireit": "^0.9.5"
  }
}
